extends ./layout
include ./mixin/widgets

block body
  .container-fluid
    .page-header
      h3 View record
        a(href='#{instancePath}').btn.btn-info.pull-right
          i.glyphicon.glyphicon-th-list
          | &nbsp;Back to list
        if instanceConfig.edit
          a(href='#{instancePath}/edit/#{record.id}').btn.btn-default.pull-right
            i.glyphicon.glyphicon-pencil
            | &nbsp;Edit record
        if instanceConfig.remove
          a(href='#{instancePath}/remove/#{record.id}', onclick="return confirm('Are you sure ?');").btn.btn-danger.pull-right
            i.glyphicon.glyphicon-trash
            | &nbsp;Remove record
    each field, key in fields
      div(style='margin-top: 5px; margin-bottom: 5px;').row
        div(style='text-transform: capitalize;').col-sm-4
          strong #{key}
        .col-sm-8 #{record[key]}
